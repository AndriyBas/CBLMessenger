<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    >

    <com.makeramen.RoundedImageView
        android:id="@+id/frag_cf_message_sender_image"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/message_logo_size"
        android:layout_height="@dimen/message_logo_size"
        android:layout_gravity="bottom"
        android:layout_margin="4dp"

        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_notification_overlay"
        app:border_color="#ffd6d6d6"
        app:border_width="1dip"
        app:corner_radius="30dip"
        app:mutate_background="true"
        app:oval="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/frag_cf_message_left"
        android:layout_marginRight="32dp"
        >

        <TextView
            android:id="@+id/frag_cf_message_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="message"
            android:textSize="16dp"
            />
    </RelativeLayout>

</LinearLayout>