<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.makeramen.RoundedImageView
        android:id="@+id/frag_gf_group_image"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/friend_logo_size"
        android:layout_height="@dimen/friend_logo_size"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_dialog_map"

        app:border_color="#ffd6d6d6"
        app:border_width="1dip"
        app:oval="true"

        />

    <TextView
        android:id="@+id/frag_gf_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/frag_gf_group_image"
        android:padding="4dp"
        android:text="Dmytro Yarosh user group"
        android:textSize="20sp"
        />

</RelativeLayout>